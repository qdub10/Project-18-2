{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["server/src/**/*", "client/src/**/*"], // Include both client and server src directories
  "exclude": ["node_modules", "dist"] // Exclude unnecessary files and directories
}

